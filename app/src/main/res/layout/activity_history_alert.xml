<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/infoProfile"/>

    <View
        android:layout_width="380dp"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:background="#0093AB"/>

    <ImageView
        android:layout_width="134dp"
        android:layout_height="176dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/alert_red" />
    <TextView
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#EA3333"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="El historial medico aun no se ha ingresado a la plataforma"
        />

    <Button
        android:id="@+id/AddHistory"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#0093AB"
        android:text="Adjuntar Historial"/>

</LinearLayout>