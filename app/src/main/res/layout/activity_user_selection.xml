<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F0EEEE">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="30dp"
            android:src="@drawable/user_type_health_professional"
            android:background="@drawable/circle"
            android:contentDescription="Health professional user type"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/healthcare_professional"
            android:fontFamily="@font/poppins"
            android:background="@drawable/button_secondary"
            android:onClick="goToDoctorLogin"
            android:textColor="@color/white"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <View
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:background="#A1A1A1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="30dp"
            android:src="@drawable/user_type_patient"
            android:background="@drawable/circle"
            android:contentDescription="Patient user type"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/patient"
            android:background="@drawable/button_secondary"
            android:onClick="goToPatientLogin"
            android:textColor="@color/white"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

</LinearLayout>